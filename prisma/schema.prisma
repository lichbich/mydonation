// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String    @unique
  email         String    @unique
  emailVerified DateTime?
  password      String
  image         String?
  bio           String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Creator profile
  isCreator       Boolean @default(false)
  creatorTitle    String?
  creatorBio      String?
  creatorCoverUrl String?
  socialLinks     String? // JSON string for social links

  // Relations
  actionCards ActionCard[]
  donations   Donation[]   @relation("SupporterDonations")
  received    Donation[]   @relation("CreatorDonations")
  sessions    Session[]
  accounts    Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ActionCard {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  emoji       String   @default("â˜•")
  color       String   @default("#FF5E5B")
  isActive    Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  creatorId String
  creator   User       @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  donations Donation[]
}

model Donation {
  id              String   @id @default(cuid())
  amount          Float
  quantity        Int      @default(1)
  message         String?
  isAnonymous     Boolean  @default(false)
  status          String   @default("pending") // pending, completed, cancelled, refunded
  paymentIntentId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  actionCardId String
  actionCard   ActionCard @relation(fields: [actionCardId], references: [id])
  supporterId  String?
  supporter    User?      @relation("SupporterDonations", fields: [supporterId], references: [id])
  creatorId    String
  creator      User       @relation("CreatorDonations", fields: [creatorId], references: [id])
}
