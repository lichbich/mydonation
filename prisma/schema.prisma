generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// NOTE: Enums removed for SQLite compatibility stability. Using Strings instead.

model User {
  id            String    @id @default(cuid())
  name          String
  username      String    @unique
  email         String    @unique
  emailVerified DateTime?
  passwordHash  String
  image         String?
  bio           String?
  role          String    @default("FAN") // "CREATOR" | "FAN"
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // NextAuth relations
  accounts      Account[]
  sessions      Session[]

  // App relations
  creatorProfile CreatorProfile?
  
  // As Creator
  posts           Post[]
  galleryItems    GalleryItem[]
  actionCards     ActionCard[]
  membershipTiers MembershipTier[]
  receivedSupport SupportTransaction[] @relation("CreatorReceived")
  receivedRequests Request[]           @relation("CreatorReceivedRequest")

  // As Fan
  sentSupport     SupportTransaction[] @relation("FanSent")
  sentRequests    Request[]            @relation("FanSentRequest")
  subscriptions   MemberSubscription[]
  
  // As Creator Members
  members         MemberSubscription[] @relation("CreatorMembers")
}

model MemberSubscription {
  id             String         @id @default(cuid())
  userId         String
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  creatorId      String
  creator        User           @relation("CreatorMembers", fields: [creatorId], references: [id], onDelete: Cascade)
  tierId         String
  tier           MembershipTier @relation(fields: [tierId], references: [id])
  
  status         String         @default("ACTIVE") // ACTIVE, EXPIRED, CANCELLED
  currentPeriodEnd DateTime
  
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@unique([userId, creatorId])
}

model CreatorProfile {
  id          String   @id @default(cuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  headline    String?
  coverImage  String?
  socialLinks String?  // Stored as JSON string
  accentColor String   @default("#000000")
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Post {
  id          String     @id @default(cuid())
  creatorId   String
  creator     User       @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  title       String
  content     String
  visibility  String     @default("PUBLIC") // "PUBLIC" | "MEMBERS"
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model GalleryItem {
  id          String     @id @default(cuid())
  creatorId   String
  creator     User       @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  type        String     // "IMAGE" | "VIDEO"
  title       String?
  url         String
  visibility  String     @default("PUBLIC")
  
  createdAt   DateTime   @default(now())
}

model ActionCard {
  id          String   @id @default(cuid())
  creatorId   String
  creator     User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  title       String
  description String?
  price       Int
  icon        String?
  isFeatured  Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  
  transactions SupportTransaction[]
}

model MembershipTier {
  id                String   @id @default(cuid())
  creatorId         String
  creator           User     @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  title             String
  description       String?
  priceMonthlyCents Int
  perks             String   // Stored as JSON string list
  isActive          Boolean  @default(true)
  
  subscriptions     MemberSubscription[]

  createdAt         DateTime @default(now())
}

model SupportTransaction {
  id           String            @id @default(cuid())
  creatorId    String
  creator      User              @relation("CreatorReceived", fields: [creatorId], references: [id])
  fanId        String?
  fan          User?             @relation("FanSent", fields: [fanId], references: [id])
  actionCardId String?
  actionCard   ActionCard?       @relation(fields: [actionCardId], references: [id])
  
  amountCents     Int
  message         String?
  guestName       String?
  isAnonymous     Boolean   @default(false)
  status          String    @default("PENDING") // PENDING, SUCCESS, CANCEL"
  
  createdAt    DateTime          @default(now())
}

model Request {
  id          String        @id @default(cuid())
  creatorId   String
  creator     User          @relation("CreatorReceivedRequest", fields: [creatorId], references: [id])
  fanId       String?
  fan         User?         @relation("FanSentRequest", fields: [fanId], references: [id])
  
  type        String        @default("OTHER") // "COMMISSION" | "SHOUTOUT" | "FAN_CONSULT" | "OTHER"
  budgetCents Int
  deadline    DateTime?
  description String
  status      String        @default("NEW") // "NEW" | "IN_PROGRESS" | "DONE" | "REJECTED"
  guestName   String?
  guestEmail  String?
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

// --- NextAuth Models ---

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
